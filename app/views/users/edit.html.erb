<% if flash[:error] %>
    <ul>
        <% flash[:error].each do |m| %>
            <li class="alert alert-warning" role="alert"><%= m %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :email %>
    <%= f.text_field :email %><br>

    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.label :bio %>
    <%= f.text_field :bio %><br>

    <%= f.label :profile_photo %>
    <%= f.file_field :profile_photo %><br>

    <%= f.submit "Update Profile" %><br>
    <%= button_to "Cancel", user_path(@user), method: :get %>
<% end %>
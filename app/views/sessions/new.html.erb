<% if flash[:message] %>
<div class="alert alert-warning" role="alert"><%= flash[:message] %></div>
<% end %>
<%= form_for @user, url: login_path, method: :post do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.submit "Log In" %><br>
<% end %>

<%= button_to "Sign Up", new_user_path, method: :get %>